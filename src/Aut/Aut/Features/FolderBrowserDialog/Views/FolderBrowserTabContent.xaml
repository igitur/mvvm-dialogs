<UserControl
    x:Class="Aut.Features.FolderBrowserDialog.Views.FolderBrowserTabContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
    xmlns:vm="clr-namespace:Aut.Features.FolderBrowserDialog.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:FolderBrowserTabContentViewModel}"
    md:DialogServiceViews.IsRegistered="True">

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            IsReadOnly="True"
            Text="{Binding Path}" />
        <Button
            Grid.Column="1"
            Content="Browse..."
            Command="{Binding BrowseFolderCommand}" />
        </Grid>
</UserControl>